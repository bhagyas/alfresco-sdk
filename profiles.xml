<profiles>
	<profile>
		<id>local</id>
		<activation>
			<activeByDefault>true</activeByDefault>
			<property>
				<name>env</name>
				<value>local</value>
			</property>
		</activation>
		<properties>
			<alfresco.dir.root>${project.basedir}/alf_data</alfresco.dir.root>
			<alfresco.db.name>alfresco</alfresco.db.name>
			<alfresco.db.username>sa</alfresco.db.username>
			<alfresco.db.password></alfresco.db.password>
			<alfresco.db.driver>org.hsqldb.jdbcDriver</alfresco.db.driver>
			<alfresco.db.url>jdbc:hsqldb:file:${dir.root}/hsql_data/;ifexists=false;shutdown=true;</alfresco.db.url>
			<alfresco.hibernate.dialect>org.hibernate.dialect.HSQLDialect</alfresco.hibernate.dialect>
			<debug.level>INFO</debug.level>
			<share.log.level>info</share.log.level>
		</properties>
	</profile>
	<profile>
		<id>staging</id>
		<activation>
			<activeByDefault>false</activeByDefault>
			<property>
				<name>env</name>
				<value>staging</value>
			</property>
		</activation>
		<properties>
			<alfresco.db.name>alfresco</alfresco.db.name>
			<alfresco.dir.root>/var/alf_data</alfresco.dir.root>
			<alfresco.db.username>alfresco</alfresco.db.username>
			<alfresco.db.password>alfresco</alfresco.db.password>
			<alfresco.db.url>jdbc:mysql://localhost/${alfresco.db.name}</alfresco.db.url>
			<alfresco.db.driver>org.gjt.mm.mysql.Driver</alfresco.db.driver>
			<alfresco.hibernate.dialect>org.hibernate.dialect.MySQLInnoDBDialect</alfresco.hibernate.dialect>
			<debug.level>ERROR</debug.level>
			<share.log.level>error</share.log.level>
		</properties>
	</profile>
</profiles>
