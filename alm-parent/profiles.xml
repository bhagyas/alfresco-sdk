<profiles>
	<profile>
		<id>local</id>
		<activation>
			<activeByDefault>true</activeByDefault>
		</activation>
		<properties>
			<env>local</env>
			
			<!-- Dev Environment settings -->
			<eclipse.downloadSources>true</eclipse.downloadSources>
			<java.compiler.version>1.5</java.compiler.version>

			<!-- Maven Release Plugin settings -->
			<maven.release.dryRun>false</maven.release.dryRun>
			<maven.release.goals>install deploy</maven.release.goals>
			<maven.release.svn.url>
				https://box.session.it/svn/whiteboard/root-pom
			</maven.release.svn.url>
			<maven.release.svn.scm>scm:svn:${maven.release.svn.url}/trunk
			</maven.release.svn.scm>
			<maven.release.svn.tags>scm:svn:${maven.release.svn.url}/tags
			</maven.release.svn.tags>

			<!-- Maven Deploy Plugin settings -->
			<maven.deploy.repository.id>releases
			</maven.deploy.repository.id>
			<maven.deploy.repository.url>
				http://box.session.it:8080/nexus/content/repositories/releases
			</maven.deploy.repository.url>

			<!-- Cargo Plugin settings -->
			<cargo.container.name>jetty6x</cargo.container.name>
			<cargo.container.servlet.port>8999</cargo.container.servlet.port>
			<cargo.container.install.directory>containers
			</cargo.container.install.directory>
			<cargo.container.distro.name>jetty-6.1.15.pre0</cargo.container.distro.name>
			<cargo.container.url>
				http://dist.codehaus.org/jetty/jetty-6.1.15/${cargo.container.distro.name}.zip
			</cargo.container.url>
			<cargo.container.keepalive>true</cargo.container.keepalive>
			<cargo.container.pingTimeout>120</cargo.container.pingTimeout>
			<cargo.tomcat.manager.url>http://localhost:8080/manager</cargo.tomcat.manager.url>
			<cargo.remote.name>tomcat5x</cargo.remote.name>
			<cargo.remote.username>tomcat</cargo.remote.username>
			<cargo.remote.password>s3cret</cargo.remote.password>
			
			<!-- Selenium settings -->
			<selenium.browser>firefox</selenium.browser>

		</properties>
	</profile>
</profiles>
